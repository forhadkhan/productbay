{
	"name": "productbay",
	"version": "1.0.0",
	"description": "WooCommerce product tables with search, filters, and pagination for high-converting, responsive product listings and easy browsing.",
	"author": "WPAnchorBay <support@wpanchorbay.com> (https://wpanchorbay.com/)",
	"contributors": [
		{
			"name": "Forhad Khan",
			"email": "dev@forhadkhan.com",
			"url": "https://forhadkhan.com/"
		}
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/forhadkhan/productbay.git"
	},
	"license": "GPL-2.0-or-later",
	"main": "src/index.tsx",
	"bugs": {
		"url": "https://github.com/forhadkhan/productbay/issues"
	},
	"homepage": "https://github.com/forhadkhan/productbay#readme",
	"scripts": {
		"tailwindbuild": "tailwindcss -i ./src/styles/main.css -o ./assets/css/admin.css --minify",
		"tailwindwatch": "tailwindcss -i ./src/styles/main.css -o ./assets/css/admin.css --watch --minify",
		"preview": "npm-run-all --parallel sync start",
		"sync": "browser-sync start -p 'boilerplate-2024.local' --files '**/*.php' 'build/*.js' 'build/*.css'",
		"wpbuild": "wp-scripts build",
		"build": "npm-run-all --parallel wpbuild tailwindbuild",
		"wpstart": "wp-scripts start",
		"start": "npm-run-all --parallel wpstart tailwindwatch",
		"test": "echo \"Error: no test specified\" && exit 1",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"lint:php": "vendor/bin/phpcs",
		"packages-update": "wp-scripts packages-update",
		"release": "bun scripts/package-plugin.js",
		"dev:win": "powershell -ExecutionPolicy Bypass -File scripts/dev.ps1",
		"dev:win:debug": "powershell -ExecutionPolicy Bypass -File scripts/dev.ps1 -Visible",
		"stop:win": "powershell -ExecutionPolicy Bypass -File scripts/stop.ps1",
		"dev:unix": "bash scripts/dev.sh",
		"stop:unix": "bash scripts/stop.sh",
		"dev": "bun run dev:unix",
		"stop": "bun run stop:unix",
		"i18n:make-pot": "php vendor/wp-cli/wp-cli/php/boot-fs.php i18n make-pot . languages/productbay.pot --domain=productbay --slug=productbay --exclude=node_modules,vendor,dist,notes,instructions",
		"i18n:make-json": "php vendor/wp-cli/wp-cli/php/boot-fs.php i18n make-json languages --no-purge"
	},
	"devDependencies": {
		"@tailwindcss/cli": "^4.1.18",
		"@wordpress/dom-ready": "^4.37.0",
		"@wordpress/element": "^6.37.0",
		"@wordpress/i18n": "^6.10.0",
		"@wordpress/scripts": "^31.2.0",
		"archiver": "^7.0.1",
		"fs-extra": "^11.3.3",
		"npm-run-all": "^4.1.5",
		"tailwindcss": "^4.1.18",
		"ts-morph": "^27.0.2",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@wordpress/react-i18n": "^4.38.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.562.0",
		"react-router-dom": "^7.11.0",
		"tailwind-merge": "^3.4.0",
		"zustand": "^5.0.10"
	}
}